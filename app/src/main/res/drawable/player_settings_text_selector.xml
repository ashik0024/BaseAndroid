<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">

        <layer-list>
            <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp">
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:radius="8dp" android:topLeftRadius="8dp" android:topRightRadius="8dp" />
                    <solid android:color="@color/red" />
                    <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
<!--                    <size android:width="110dp" android:height="35dp" />-->
<!--                    <stroke android:width="3px" android:color="@color/white" />-->
                </shape>
            </item>
        </layer-list>

    </item>

    <item android:state_focused="false">
        <layer-list>
            <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp">
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:radius="0dp" android:topLeftRadius="0dp" android:topRightRadius="00dp" />
                    <solid android:color="@color/transparent" />
                    <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
<!--                    <size android:width="110dp" android:height="35dp" />-->
                </shape>
            </item>
        </layer-list>
    </item>

</selector>